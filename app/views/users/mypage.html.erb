<h2>マイページ</h2>
<div class= "container">
 <div class= "row">
  <div class= "col-4">
   <h2>プロフィール</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
   <table class= "table">
    <tbody>
     <tr>
      <th>ニックネーム</th>
      <th><%= @user.name %></th>
     </tr>
    </tbody>
   </table>
   <div class= "row">
    <%= link_to mypage_edit_path(@user), class: "btn btn-secondary" do %>
     <i class="fa-solid fa-user-gear"></i> ユーザ編集
    <% end %>
    <%= link_to users_confirm_path(@user), class: "btn btn-danger" do %>
     退会する
    <% end %>
   </div>
  </div>
  
  <div class= "col-8">
   <h2>投稿一覧</h2>
    <div class= "card-list-container">
    <% @posts.each do |post| %>
    <div>
     <p>タイトル: <%= post.title %></p>
     <p>レビュー: <%= post.review_i18n %></p>
     <p>本文: <%= post.body %></p>
     <%= link_to "編集する", edit_post_path(post) %>
     <%= link_to "削除する", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
   <% end %>
  </div>
 </div>
</div>