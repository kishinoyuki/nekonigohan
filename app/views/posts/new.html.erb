<h1>新規投稿画面</h1>

<%= form_with model: @post do |f| %>

 <h4>タイトル</h4>
 <%= f.text_field :title %>
 
 <h4>レビュー</h4>
 <%= f.select :review, Post.reviews.keys.map {|k| [I18n.t("enums.post.review.#{k}"), k]} %>
 
 <h4>商品名</h4>
  <%= f.fields_for @item do |item_fields| %>
   <%= item_fields.text_field :name %>
  <% end %>

 <h4>本文</h4>
 <%= f.text_area :body %>

 <%= f.submit '投稿する' %>
<% end %>

