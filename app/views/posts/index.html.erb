 <div class= "container">
  <div class= "card mt-4 mb-4">
   <h3 class= "card-header">投稿一覧</h3>
   <div class= "card-body">
    <div class= "row-cols-2-flex">
     <div class= "card-list-container py-5 mx-auto d-flex justify-content-center flex-wrap">
     <% @posts.each do |post| %>
      <div class= "card mt-4 mr-2 col-5">
       <%= image_tag post.item.get_image, class: "card-image-top", height: 400 %>
       <div class= "card-body">
        <div class= "row">
         <div class= "col-2 mr-2">
         <% if post.user_id == current_user.id %>
          <%= link_to mypage_path do %>
           <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
           <%= current_user.name %>
          <% end %>
         <% else %>
          <%= link_to user_path(post.user_id) do %>
           <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
           <%= post.user.name %>
          <% end %>
         <% end %>
         </div>
         <div class= "col-8 mx-auto">
          <p class= "card-title">タイトル:
           <%= post.title %>
          </p>
       
          <p class= "card-item_title">商品名:
           <%= post.item.name %>
          </p>
       
          <p class= "card-review">レビュー:
           <%= post.review_i18n %>
          </p>
       
          <% if current_user.id == post.user_id %>
            <%= link_to edit_post_path(post), class: "btn btn-secondary" do %>
             編集する
            <% end %>
            <%= link_to post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" do %>
             削除する
            <% end %>
          <% end %>
          <div class= "row mt-2 mx-auto">
           <%= link_to post_path(post), class: "btn btn-info" do %>
            詳細
           <% end %>
          </div>
         </div>
        </div>
       </div>
      </div>
     <% end %>
     </div>
    </div>
   </div>
  </div>
 </div>