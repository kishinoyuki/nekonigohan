<h1>投稿一覧</h1>

<% @posts.each do |post| %>
 <div>
  <p>投稿ユーザ名: <%= post.user.name %></p>
  <p>タイトル: <%= post.title %></p>
  <p>レビュー: <%= post.review_i18n %></p>
  <p>本文: <%= post.body %></p>
  <% if current_user.id == post.user_id %>
   <%= link_to "編集する", edit_post_path(post) %>
   <%= link_to "削除する", post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
 </div>
<% end %>