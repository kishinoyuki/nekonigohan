<h1>投稿一覧</h1>
 <div class= "card-container">
  <% @posts.each do |post| %>
  <div class= "card w-50 mt-4 mx-auto">
    <%= image_tag post.item.get_image, class: "card-image-top" %>
    <div class= "card-body">
     <div class= "row">
      <div class= "col-2">
       <% if post.user_id == current_user.id %>
        <% link_to mypage_path do %>
         <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
         <%= current_user.name %>
        <% end %>
       <% else %>
        <%= link_to user_path(post.user_id) do %>
         <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %>
         <%= post.user.name %>
        <% end %>
       <% end %>
      </div>
      <div class= "col-10">
       <p class= "card-title">タイトル:
        <%= post.title %>
       </p>
       
       <p class= "card-item_title">商品名:
         <%= post.item.name %>
       </p>
       
       <p class= "card-item-genre">商品ジャンル:
         <%= post.item.genre.name %>
       </p>
       
       <p class= "card-donation-name">寄付先:
        <%= post.item.donation_destination.name %>
       </p>
       
       <p class= "card-donation-location">寄付先都道府県:
        <%= post.item.donation_destination.location_i18n %>
       </p>
       
       <p class= "card-review">レビュー:
        <%= post.review_i18n %>
       </p>
       
       <p class= "card-text">本文:
        <%= post.body %>
       </p>

       <% if current_user.id == post.user_id %>
        <%= link_to edit_post_path(post), class: "btn btn-success" do %>
         編集する
        <% end %> 
        <%= link_to post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" do %>
         削除する
        <% end %>
       <% end %>
      </div>
     </div>
    </div>
   </div>
   <% end %>
  </div>