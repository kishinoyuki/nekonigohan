<h3>ユーザ一覧(管理者)</h3>

<% if flash[:success].present? %>
 <div class= "alert alert-success mt-2" role= "alert">
  <%= flash[:success] %>
 </div>
<% end %>

<table class= "table mt-2">
 <thead>
  <tr>
   <th class= "image">プロフィール画像</th>
   <th class= "name">ユーザ名</th>
   <th class= "e-mail">メールアドレス</th>
   <th class= "destroy"></th>
  </tr>
 </thead>
 <% @users.each do |user| %>
 <tbody>
  <tr>
   <td>
    <%= image_tag user.get_profile_image(100,100) %>
   </td>
   <td>
    <%= user.name %>
   </td>
   <td>
    <%= user.email %>
   </td>
   <td>
    <%= link_to admin_user_path(user), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" do %>
     削除
    <% end %>
   </td>
  </tr>
 </tbody>
 <% end %>
</table>