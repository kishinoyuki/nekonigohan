<div class= "container mt-4 mb-4">
 <div class= "card mx-auto" style= "max-width: 540px;">
 <h3 class= "card-header bg-secondary text-light"><i class="fa-solid fa-comment mr-2"></i>コメント編集画面</h3>
  <div class= "card-body">
   <% if flash[:alert].present? %>
    <div class= "alert alert-danger" role= "alert">
    <%= flash[:alert] %>
    </div>
   <% end %>
   
   <%= form_with model: [@post, @post_comment] do |f| %>
    <div class= "form-group mb-2">
     <label class= "control-label">コメント</label>
     <%= f.text_area :comment, class: "form-control" %>
    </div>
    
    <div class= "form-group mb-2">
     <%= f.submit '編集', class: "btn btn-secondary" %>
    </div>
    <div class= "d-flex flex-row">
     <%= link_to post_post_comment_path(@post, @post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" do %>
       <i class="fa-solid fa-xmark mr-2"></i>削除
     <% end %>
    </div>

   <% end %>
  </div>
 </div>
</div>
