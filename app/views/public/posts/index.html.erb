 <div class= "container">
 <%= render 'flash' %>
  <div class= "row d-flex flex-row">
   <%= render 'public/users/search' %>
  <div class="card h-25 col-sm-11 col-lg-5 mt-4 ml-3 mb-4">
   <div class="card-header">絞り込みと並び替え</div>
   <div class="card-body">
    <%= form_tag({controller: "posts", action: "index"}, method: :get) do %>
      <%= select_tag :search, options_for_select([["⭐️", 1],["⭐⭐️️", 2],["⭐️⭐️⭐️", 3],["⭐️⭐️⭐️⭐️", 4],["⭐️⭐️⭐️⭐️⭐️", 5]], params[:search]), prompt: "評価を選択してください" %>
      <%= select_tag :order, options_for_select(["評価が低い投稿から", "評価が高い投稿から"], params[:order]), prompt: "評価の並び替え" %>
      <%= submit_tag "絞り込みと並び替え" %>
    <% end %>
   </div>
  </div>
  </div>

  <div class= "card mt-4 mb-4 w-auto">
   <h3 class= "card-header">投稿一覧</h3>
   <%= render 'post', posts: @posts %>
  </div>
 </div>