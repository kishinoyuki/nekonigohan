<div class= "container mt-4 mb-4">
 <div class= "card mx-auto" style= "max-width: 540px;">
  <h3 class= "card-header bg-secondary text-light"><i class="fa-solid fa-user-gear mr-2"></i>ユーザ編集</h3>
   <div class= "card-body">
    <% if @user.errors.any?  %>
     <div class= "alert alert-danger" role= "alert">
      <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
     </div>
    <% end %>

    <%= form_with model: @user do |f| %>
     <div class= "form-group mb-2">
      <label>ニックネーム</label>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
     </div>

     <div class= "form-group mb-2">
      <label>プロフィール画像</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     </div>
     
     <div class= "form-group mb-2">
      <label>一言</label>
      <%= f.text_area :introduction, class: "form-control" %>
     </div>
 
     <div class= "d-flex flex-row">
      <div class= "form-group mb-2">
       <%= f.submit "編集", class: "btn btn-secondary" %>
      </div>
 
      <div class= "form-group mb-2 ml-2">
       <%= link_to users_confirm_path(@user), class: "btn btn-danger" do %>
        <i class="fa-solid fa-user-xmark mr-2"></i>退会
       <% end %>
      </div>
     </div>
    <% end %>
   </div>
  </div>
 </div>
</div>