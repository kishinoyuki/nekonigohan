<div class = "card h-25 col-sm-11 col-lg-5 mt-4 ml-3 mb-4 mx-auto">
<p class= "card-header">検索フォーム</p>
 <div class= "card-body">
  <% if flash[:search_alert].present? %>
   <div class= "alert alert-danger" role="alert">
    <%= flash[:search_alert] %>
   </div>
  <% end %>
  <div class= "search_form" >
   <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, autofocus: true, class: "form-control" %>
    <%= f.select :range, options_for_select([['ユーザー'], ['商品'], ['寄付先']]), class: "mt-2 mr-2" %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), class: "mt-2" %>
    <%= f.submit "検索", class: "btn btn-primary mt-2" %>
   <% end %>
  </div>
 </div>
 
 <p class= "card-header">タグ検索</p>
 <div class= "card-body">
  <% if flash[:tag_alert].present? %>
   <div class= "alert alert-danger" role="alert">
    <%= flash[:tag_alert] %>
   </div>
  <% end %>
  <div class= "search_form" >
   <%= form_with url: tagsearches_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, autofocus: true, class: "form-control" %>
    <%= f.submit "検索", class: "btn btn-primary mt-2" %>
   <% end %>
  </div>
 </div>
 
</div>